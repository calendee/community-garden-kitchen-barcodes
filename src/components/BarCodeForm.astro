<section>
	<form id="barcode-form">
		<label for="bar-code">Barcode</label>
		<input id="bar-code" name="bar-code" placeholder="Tap here and then scan a code">
	</form>
   
</section>

<script>
   (async function() {
      function handleSubmit(event) {
         event.preventDefault();
         const barCode = document.getElementById("bar-code").value;
         console.log('Handled!', barCode);
         const newEvent = new CustomEvent ('scan-completed', {detail: {barCode}});
         document.dispatchEvent(newEvent)
      }

      const barCodeForm = document.getElementById("barcode-form");
      console.log('Barcodeform');
      console.log(barCodeForm);
      barCodeForm.addEventListener("submit", handleSubmit);
   })();

</script>
